 <!-- Nested Form of Experience for f -->
<div class="nested-fields">
  <div class="">
    <%= f.label :job_title, "Job Title :" %>
    <%= f.text_field :job_title ,placeholder: "Enter Your Job Title", class:"mb-2 form-control" %>
    <br>
    <%= f.label :employer, "Employer :" %>
    <%= f.text_field :employer ,placeholder: "Enter Your Employer", class:"mb-2 form-control" %>
    <br>
    <%= f.label :start_date, "Start-Date :" %>
    <%= f.month_field :start_date,  :value => Time.now.strftime("%Y-%m"), class:"mb-2 form-control" %>
    <br>
    <%= f.label :end_date, "End-Date :" %>
    <%= f.month_field :end_date,  :value => Time.now.strftime("%Y-%m"), class:"mb-2 form-control" %>
    <br>
    <%= f.label :job_description, "Job Description :" %>
    <%= f.text_area :job_description ,placeholder: "Enter Your Job Description", class:"mb-2 form-control" %>
    <br>
    <%= link_to_remove_association fa_icon("trash"), f, class:"btn-danger border-0 rounded-pill shadow px-3 py-2 mx-2 text-decoration-none", style:"height:100%;" %>
  </div>
</div>
