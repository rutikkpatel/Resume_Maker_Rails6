<!-- Resume6 Form -->
<div class="container form-container">
  <div class="flex-column">
    <!-- Form Started Here -->
    <%= form_for @resume6 do |f| %>
      <div class="form-group row">
        <div class="form-group col-md-7">
          <%= f.label :name, "Name :", class:"mt-3" %>
          <%= f.text_field :name, placeholder: "Enter Your Name",class:"mb-2 form-control" %>
          <br>
        </div>
        <div class="form-group col-md-5">
          <%= f.label :current_role, "Current Role :", class:"mt-3" %>
          <%= f.text_field :current_role, placeholder: "Enter Your Current Role", class:"mb-2 form-control" %>
          <br>
        </div>
      </div>
      <br>
      <div class="form-group row">
        <div class="form-group col-md-4">
          <%= f.label :contact_number, "Contact :" %>
          <%= f.text_field :contact_number, placeholder: "Contact",class:"mb-2 form-control" %>
          <br>
        </div>
        <div class="form-group col-md-4">
          <%= f.label :email, "Email :" %>
          <%= f.text_field :email, placeholder: "Email-ID",class:"mb-2 form-control" %>
          <br>
        </div>
        <div class="form-group col-md-4">
          <%= f.label :linkedin_username, "Linkedin :" %>
          <%= f.text_field :linkedin_username, placeholder: "Linkedin Username",class:"mb-2 form-control" %>
          <br>
        </div>
      </div>
      <br>
      <!-- Skills -->
      <div class="form-group row">
        <div class="form-group">
          <div class="skill6s d-flex">
            <%= f.fields_for :skill6s do |skill6| %>
              <%= render 'skill6_fields', f: skill6 %>
            <% end %>
          </div>
          <%= link_to_add_association fa_icon("plus", text: "Add Skill"), f, :skill6s, data: {association_insertion_node: '.skill6s', association_insertion_method: :append}, class:"btn-primary border-0 rounded-pill shadow px-3 py-2 text-decoration-none" %>
        </div>
      </div>
      <!-- Awards -->
      <div class="form-group row">
        <div class="form-group">
          <div class="award6s d-flex">
            <%= f.fields_for :award6s do |award6| %>
              <%= render 'award6_fields', f: award6 %>
            <% end %>
          </div>
          <%= link_to_add_association fa_icon("plus", text: "Add Award"), f, :award6s, data: {association_insertion_node: '.award6s', association_insertion_method: :append}, class:"btn-primary border-0 rounded-pill shadow px-3 py-2 text-decoration-none" %>
        </div>
      </div>
      <!-- Known Languages -->
      <div class="form-group row">
        <div class="form-group">
          <div class="knownlang6s d-flex">
            <%= f.fields_for :knownlang6s do |knownlang6| %>
              <%= render 'knownlang6_fields', f: knownlang6 %>
            <% end %>
          </div>
          <%= link_to_add_association fa_icon("plus", text: "Add Language"), f, :knownlang6s, data: {association_insertion_node: '.knownlang6s', association_insertion_method: :append}, class:"btn-primary border-0 rounded-pill shadow px-3 py-2 text-decoration-none" %>
        </div>
      </div>
      <!-- EDUCATION -->
      <div class="form-group row mt-5">
        <div class="form-group">
          <div class="education6s d-flex">
            <%= f.fields_for :education6s do |education6| %>
              <%= render 'education6_fields', f: education6 %>
            <% end %>
          </div>
          <%= link_to_add_association fa_icon("plus", text: "Add Education"), f, :education6s, data: {association_insertion_node: '.education6s', association_insertion_method: :append}, class:"btn-primary border-0 rounded-pill shadow px-3 py-2 text-decoration-none" %>
        </div>
      </div>
      <!-- EXPERIENCE -->
      <div class="form-group row mt-5">
        <div class="form-group">
          <div class="experience6s d-flex">
            <%= f.fields_for :experience6s do |experience6| %>
              <%= render 'experience6_fields', f: experience6 %>
            <% end %>
          </div>
          <%= link_to_add_association fa_icon("plus", text: "Add Experience"), f, :experience6s, data: {association_insertion_node: '.experience6s', association_insertion_method: :append}, class:"btn-primary border-0 rounded-pill shadow px-3 py-2 text-decoration-none" %>
        </div>
      </div>
      <!-- PROFILE SUMMARY -->
      <div class="form-group row mt-5">
        <%= f.label :profile_summary, "Profile Summary :" %>
        <%= f.text_area :profile_summary, placeholder: "Enter Your Profile Summary",class:"mb-2 form-control",  rows: 5  %>
      </div>
      <br>
      <div class="form-group row">
        <div class="form-group col-md-4">
          <%= f.submit class:"btn-primary border-0 rounded-pill shadow p-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
