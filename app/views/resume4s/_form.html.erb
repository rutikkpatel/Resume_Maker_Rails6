<!-- Resume4 Form -->
<div class="container form-container">
  <div class="flex-column">
    <!-- Form Started Here -->
    <%= form_for @resume4 do |f| %>
      <div class="form-group row">
        <div class="form-group col-md-7">
          <%= f.label :name, "Name :", class:"mt-3" %>
          <%= f.text_field :name, placeholder: "Enter Your Name",class:"mb-2 form-control" %>
          <br>
        </div>
        <div class="form-group col-md-5">
          <%= f.label :current_role, "Current Role :", class:"mt-3" %>
          <%= f.text_field :current_role, placeholder: "Enter Your Current Role", class:"mb-2 form-control" %>
          <br>
        </div>
      </div>
      <%= f.label :profile_pic, "Profile Pic :" %>
      <%= f.file_field :profile_pic, placeholder: "Enter Your Pic", class:"mb-2 form-control" %>
      <br>
      <div class="form-group row">
        <div class="form-group col-md-4">
          <%= f.label :contact_number, "Contact :" %>
          <%= f.text_field :contact_number, placeholder: "Contact",class:"mb-2 form-control" %>
          <br>
        </div>
        <div class="form-group col-md-4">
          <%= f.label :email, "Email :" %>
          <%= f.text_field :email, placeholder: "Email-ID",class:"mb-2 form-control" %>
          <br>
        </div>
        <div class="form-group col-md-4">
          <%= f.label :linkedin_username, "Linkedin :" %>
          <%= f.text_field :linkedin_username, placeholder: "Linkedin Username",class:"mb-2 form-control" %>
          <br>
        </div>
      </div>
      <br>
      <!-- Skills -->
      <div class="form-group row">
        <div class="form-group">
          <div class="skill4s d-flex">
            <%= f.fields_for :skill4s do |skill4| %>
              <%= render 'skill4_fields', f: skill4 %>
            <% end %>
          </div>
          <%= link_to_add_association fa_icon("plus", text: "Add Skill"), f, :skill4s, data: {association_insertion_node: '.skill4s', association_insertion_method: :append}, class:"btn-primary border-0 rounded-pill shadow px-3 py-2 text-decoration-none" %>
        </div>
      </div>
      <!-- Awards -->
      <div class="form-group row">
        <div class="form-group">
          <div class="award4s d-flex">
            <%= f.fields_for :award4s do |award4| %>
              <%= render 'award4_fields', f: award4 %>
            <% end %>
          </div>
          <%= link_to_add_association fa_icon("plus", text: "Add Award"), f, :award4s, data: {association_insertion_node: '.award4s', association_insertion_method: :append}, class:"btn-primary border-0 rounded-pill shadow px-3 py-2 text-decoration-none" %>
        </div>
      </div>
      <!-- Known Languages -->
      <div class="form-group row">
        <div class="form-group">
          <div class="knownlang4s d-flex">
            <%= f.fields_for :knownlang4s do |knownlang4| %>
              <%= render 'knownlang4_fields', f: knownlang4 %>
            <% end %>
          </div>
          <%= link_to_add_association fa_icon("plus", text: "Add Language"), f, :knownlang4s, data: {association_insertion_node: '.knownlang4s', association_insertion_method: :append}, class:"btn-primary border-0 rounded-pill shadow px-3 py-2 text-decoration-none" %>
        </div>
      </div>
      <!-- EDUCATION -->
      <div class="form-group row mt-5">
        <div class="form-group">
          <div class="education4s d-flex">
            <%= f.fields_for :education4s do |education4| %>
              <%= render 'education4_fields', f: education4 %>
            <% end %>
          </div>
          <%= link_to_add_association fa_icon("plus", text: "Add Education"), f, :education4s, data: {association_insertion_node: '.education4s', association_insertion_method: :append}, class:"btn-primary border-0 rounded-pill shadow px-3 py-2 text-decoration-none" %>
        </div>
      </div>
      <!-- EXPERIENCE -->
      <div class="form-group row mt-5">
        <div class="form-group">
          <div class="experience4s d-flex">
            <%= f.fields_for :experience4s do |experience4| %>
              <%= render 'experience4_fields', f: experience4 %>
            <% end %>
          </div>
          <%= link_to_add_association fa_icon("plus", text: "Add Experience"), f, :experience4s, data: {association_insertion_node: '.experience4s', association_insertion_method: :append}, class:"btn-primary border-0 rounded-pill shadow px-3 py-2 text-decoration-none" %>
        </div>
      </div>
      <!-- PROFILE SUMMARY -->
      <div class="form-group row mt-5">
        <%= f.label :profile_summary, "Profile Summary :" %>
        <%= f.text_area :profile_summary, placeholder: "Enter Your Profile Summary",class:"mb-2 form-control",  rows: 5  %>
      </div>
      <br>
      <div class="form-group row">
        <div class="form-group col-md-4">
          <%= f.submit class:"btn-primary border-0 rounded-pill shadow p-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
