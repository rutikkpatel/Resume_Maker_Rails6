<!-- Resume5 Form -->
<div class="container form-container">
  <div class="flex-column">
    <!-- Form Started Here -->
    <%= form_for @resume5 do |f| %>
      <div class="form-group row">
        <div class="form-group col-md-7">
          <%= f.label :name, "Name :", class:"mt-3" %>
          <%= f.text_field :name, placeholder: "Enter Your Name",class:"mb-2 form-control" %>
          <br>
        </div>
        <div class="form-group col-md-5">
          <%= f.label :current_role, "Current Role :", class:"mt-3" %>
          <%= f.text_field :current_role, placeholder: "Enter Your Current Role", class:"mb-2 form-control" %>
          <br>
        </div>
      </div>
      <br>
      <div class="form-group row">
        <div class="form-group col-md-4">
          <%= f.label :contact_number, "Contact :" %>
          <%= f.text_field :contact_number, placeholder: "Contact",class:"mb-2 form-control" %>
          <br>
        </div>
        <div class="form-group col-md-4">
          <%= f.label :email, "Email :" %>
          <%= f.text_field :email, placeholder: "Email-ID",class:"mb-2 form-control" %>
          <br>
        </div>
        <div class="form-group col-md-4">
          <%= f.label :linkedin_username, "Linkedin :" %>
          <%= f.text_field :linkedin_username, placeholder: "Linkedin Username",class:"mb-2 form-control" %>
          <br>
        </div>
      </div>
      <br>
      <!-- Skills -->
      <div class="form-group row">
        <div class="form-group">
          <div class="skill5s d-flex">
            <%= f.fields_for :skill5s do |skill5| %>
              <%= render 'skill5_fields', f: skill5 %>
            <% end %>
          </div>
          <%= link_to_add_association fa_icon("plus", text: "Add Skill"), f, :skill5s, data: {association_insertion_node: '.skill5s', association_insertion_method: :append}, class:"btn-primary border-0 rounded-pill shadow px-3 py-2 text-decoration-none" %>
        </div>
      </div>
      <!-- Awards -->
      <div class="form-group row">
        <div class="form-group">
          <div class="award5s d-flex">
            <%= f.fields_for :award5s do |award5| %>
              <%= render 'award5_fields', f: award5 %>
            <% end %>
          </div>
          <%= link_to_add_association fa_icon("plus", text: "Add Award"), f, :award5s, data: {association_insertion_node: '.award5s', association_insertion_method: :append}, class:"btn-primary border-0 rounded-pill shadow px-3 py-2 text-decoration-none" %>
        </div>
      </div>
      <!-- Known Languages -->
      <div class="form-group row">
        <div class="form-group">
          <div class="knownlang5s d-flex">
            <%= f.fields_for :knownlang5s do |knownlang5| %>
              <%= render 'knownlang5_fields', f: knownlang5 %>
            <% end %>
          </div>
          <%= link_to_add_association fa_icon("plus", text: "Add Language"), f, :knownlang5s, data: {association_insertion_node: '.knownlang5s', association_insertion_method: :append}, class:"btn-primary border-0 rounded-pill shadow px-3 py-2 text-decoration-none" %>
        </div>
      </div>
      <!-- EDUCATION -->
      <div class="form-group row mt-5">
        <div class="form-group">
          <div class="education5s d-flex">
            <%= f.fields_for :education5s do |education5| %>
              <%= render 'education5_fields', f: education5 %>
            <% end %>
          </div>
          <%= link_to_add_association fa_icon("plus", text: "Add Education"), f, :education5s, data: {association_insertion_node: '.education5s', association_insertion_method: :append}, class:"btn-primary border-0 rounded-pill shadow px-3 py-2 text-decoration-none" %>
        </div>
      </div>
      <!-- EXPERIENCE -->
      <div class="form-group row mt-5">
        <div class="form-group">
          <div class="experience5s d-flex">
            <%= f.fields_for :experience5s do |experience5| %>
              <%= render 'experience5_fields', f: experience5 %>
            <% end %>
          </div>
          <%= link_to_add_association fa_icon("plus", text: "Add Experience"), f, :experience5s, data: {association_insertion_node: '.experience5s', association_insertion_method: :append}, class:"btn-primary border-0 rounded-pill shadow px-3 py-2 text-decoration-none" %>
        </div>
      </div>
      <!-- PROFILE SUMMARY -->
      <div class="form-group row mt-5">
        <%= f.label :profile_summary, "Profile Summary :" %>
        <%= f.text_area :profile_summary, placeholder: "Enter Your Profile Summary",class:"mb-2 form-control",  rows: 5  %>
      </div>
      <br>
      <div class="form-group row">
        <div class="form-group col-md-4">
          <%= f.submit class:"btn-primary border-0 rounded-pill shadow p-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
